<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-app"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/letter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/wordle_text"
        android:textSize="24sp"
        app:layout_constraintBottom="parent"
        app:layout_constraintEnd="parent"
        app:layout_constraintStart="parent"
        app:layout_constraintTop="parent"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="296dp" />

    <View
        android:id="@+id/letter_background_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/wordle_unknown"
        app:layout_constraintEnd="parent"
        app:layout_constraintStart="parent"
        app:layout_constraintTop="parent"
        app:layout_constraintBottom="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
